{% macro sortable(users, label, field, sortParam, direction) %}
    <th scope="col" class="group py-3.5 px-3 text-center text-sm font-semibold text-gray-900">
        <div class="flex items-center justify-center gap-1 group transition-colors duration-150">
            {% if sortParam == field %}
                {% if direction == 'asc' %}
                    <!-- Arrow Up (active) -->
                    <svg class="w-4 h-4 text-indigo-600 group-hover:text-indigo-600 transition"
                         fill="none" stroke="currentColor" stroke-width="2"
                         viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 15l7-7 7 7"/>
                    </svg>
                {% else %}
                    <!-- Arrow Down (active) -->
                    <svg class="w-4 h-4 text-indigo-600 group-hover:text-indigo-600 transition"
                         fill="none" stroke="currentColor" stroke-width="2"
                         viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 9l-7 7-7-7"/>
                    </svg>
                {% endif %}
     
            {% else %}
                <!-- Default Arrow (inactive) -->
                <!-- Dual Arrows (neutral) -->
                <div class="flex flex-col items-center text-gray-400  group-hover:text-indigo-600 transition">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2"
                         viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M5 15l7-7 7 7"/>
                    </svg>
                    <svg class="w-3 h-3 -mt-1" fill="none" stroke="currentColor" stroke-width="2"
                         viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 9l-7 7-7-7"/>
                    </svg>
                </div>
            {% endif %} 

            <span class="cursor-pointer text-gray-900 group-hover:text-indigo-600 transition font-semibold">
                {{ knp_pagination_sortable(users, label, field) }}
            </span>
        </div>
    </th>
{% endmacro %}
