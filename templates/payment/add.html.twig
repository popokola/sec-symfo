{% extends 'partials/_dashboard.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1 class="text-2xl font-semibold text-gray-900 dark:text-slate-100">Add Payment</h1>
</div>

<div class="mx-auto max-w-4xl mt-6 sm:px-6 lg:px-8">
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-medium text-gray-900 dark:text-slate-100">Payment Form</h3>
        </div>
        <div class="px-6 py-6">
            {{ form_start(paymentForm) }}

            <div class="mb-6">
                {{ form_label(paymentForm.amount, null, {'label_attr': {'class': 'block text-sm pb-2 font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(paymentForm.amount, {
                    attr: {
                    class: 'block w-full max-w-xs rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    placeholder: 'Amount'
                    }
                }) }}
                {{ form_errors(paymentForm.amount) }}
            </div>

            <div class="mb-6">
                {{ form_label(paymentForm.billable, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(paymentForm.billable, {
                    attr: {
                    class: 'block w-full max-w-xs rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    placeholder: 'The date of the payment'
                    }
                }) }}
                {{ form_errors(paymentForm.billable) }}
            </div>

            <div class="mb-6">
                {{ form_label(paymentForm.member, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}}) }}
                {{ form_widget(paymentForm.member, {
                    attr: {
                    class: 'block w-full max-w-xs rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                    placeholder: 'Select a member'
                    }
                }) }}
                {{ form_errors(paymentForm.member) }}
            </div>

            <div class="pt-5 flex justify-end">
                <button type="submit" class="inline-flex justify-center rounded-md bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Save
                </button>
            </div>

            {{ form_end(paymentForm) }}
        </div>
    </div>
</div>
{% endblock %}
